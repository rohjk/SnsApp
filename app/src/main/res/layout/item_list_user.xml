<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.jake.bucketplace.snsapp.domain.model.User" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/horizontal_item_size"
        android:layout_height="wrap_content"
        android:onClick="@{clickListener}">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/listItemUserNickName"
            style="@style/text_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{user.nickName}"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Name" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/text_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_extra_small"
            android:text="@{user.introduction}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listItemUserNickName"
            tools:text="Description" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>